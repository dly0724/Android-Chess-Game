<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GamePlay">

    <TextView
        android:id="@+id/PlayVSInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/playVSInfo" />

    <view
        android:id="@+id/gameView"
        class="edu.msu.yangziya.project1.GameView"
        android:layout_width="500dp"
        android:layout_height="394dp"
        android:layout_below="@id/PlayVSInfo"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-19dp"
        android:layout_marginEnd="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/ReviewRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="50dp"
            android:onClick="onShowRules"
            android:text="@string/Rule_button" />

        <Button
            android:id="@+id/Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:onClick="onRestart"
            android:text="@string/restart" />

        <Button
            android:id="@+id/quitButton"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="226dp"
            android:layout_marginBottom="0dp"
            android:onClick="onQuit"
            android:text="@string/Quit" />
    </LinearLayout>

</RelativeLayout>